<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10" prefHeight="355.0" prefWidth="515.0" vgap="10"
          xmlns="http://javafx.com/javafx/8.0.221" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="io.github.deleuze199.Controller">
    <columnConstraints>
        <ColumnConstraints/>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
    </rowConstraints>
    <stylesheets>
        <URL value="@plt.css"/>
    </stylesheets>
    <TabPane prefHeight="355.0" prefWidth="515.0" tabClosingPolicy="UNAVAILABLE"
             GridPane.columnIndex="1">
        <GridPane.margin>
            <Insets left="-10.0"/>
        </GridPane.margin>
        <Tab text="Product Line">
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="317.0" prefWidth="485.0">
                <Button layoutX="403.0" layoutY="111.0" mnemonicParsing="false"
                        onAction="#productLineButtonHandler" text="Add Product"/>
                <GridPane layoutX="20.0" layoutY="14.0" prefHeight="93.0"
                          prefWidth="478.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
                                           prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
                                           prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints maxHeight="60.0" minHeight="10.0"
                                        prefHeight="60.0" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="85.0" minHeight="0.0"
                                        prefHeight="67.0" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="104.0" minHeight="10.0"
                                        prefHeight="65.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <Label text="Product Name"/>
                    <Label text="Manufacturer " GridPane.rowIndex="1"/>
                    <Label text="Item Type" GridPane.rowIndex="2"/>
                    <TextField fx:id="productNameTF" GridPane.columnIndex="1"/>
                    <TextField fx:id="manufacturerTF" GridPane.columnIndex="1"
                               GridPane.rowIndex="1"/>
                    <ChoiceBox fx:id="choiceBox" prefHeight="27.0" prefWidth="139.0"
                               GridPane.columnIndex="1" GridPane.rowIndex="2">
                        <GridPane.margin>
                            <Insets left="100.0"/>
                        </GridPane.margin>
                    </ChoiceBox>
                </GridPane>
                <Label layoutX="20.0" layoutY="116.0" text="Existing Products"/>
                <TableView fx:id="productTable" layoutX="12.0" layoutY="149.0"
                           prefHeight="168.0" prefWidth="491.0">
                    <columns>
                        <TableColumn fx:id="idCol" prefWidth="47.0" text="ID"/>
                        <TableColumn fx:id="nameCol" prefWidth="174.0" text="Name"/>
                        <TableColumn fx:id="manufacturerCol" prefWidth="185.0"
                                     text="Manufacturer"/>
                        <TableColumn fx:id="typeCol" prefWidth="84.0" text="Type"/>
                    </columns>
                </TableView>
            </AnchorPane>
        </Tab>
        <Tab text=" Produce">
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                <Button layoutX="369.0" layoutY="265.0" mnemonicParsing="false"
                        onAction="#produceBtnHandler" text="Record Production"/>
                <Label layoutX="29.0" layoutY="14.0" text="Choose Product"/>
                <ListView fx:id="produceList" layoutX="157.0" layoutY="14.0"
                          prefHeight="186.0" prefWidth="345.0"/>
                <Label layoutX="46.0" layoutY="221.0" text="Choose Quantity"/>
                <ComboBox fx:id="comboBox" layoutX="274.0" layoutY="216.0"
                          prefHeight="27.0" prefWidth="228.0"/>
            </AnchorPane>
        </Tab>
        <Tab text="Production Log">
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="500.0" prefWidth="500.0">
                <TextArea fx:id="productionLogTA" layoutX="4.0" layoutY="4.0"
                          prefHeight="311.0" prefWidth="505.0"/>
            </AnchorPane>
        </Tab>
    </TabPane>
</GridPane>
